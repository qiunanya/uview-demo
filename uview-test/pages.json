{
	"easycom": {
			"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
		},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "糖果博客",
				"navigationBarBackgroundColor":"#0278ae",
				"navigationBarTextStyle":"white",
				"navigationBarShadow":{
					"colorType": "green"
				},
				"disableScroll": true,//微信/百度/头条  
				"mp-alipay": {  
					"allowsBounceVertical": "NO"  
				}  
			}
		},
		{
			"path": "pages/clock/clock",
			"style": {
				"navigationBarTitleText": "打卡",
				"navigationBarBackgroundColor":"#0278ae",
				"navigationBarTextStyle":"white",
				"navigationBarShadow":{
					"colorType": "green"
				}
			}
		},
		{
			"path": "pages/article/article",
			"style": {
				"navigationBarTitleText": "写作",
				"navigationBarBackgroundColor":"#0278ae",
				"navigationBarTextStyle":"white",
				"navigationBarShadow":{
					"colorType": "green"
				}
			}
		},
		{
			"path": "pages/mine/mine",
			"style": {
				"navigationBarTitleText": "我的",
				"navigationBarBackgroundColor":"#0278ae",
				"navigationBarTextStyle":"white",
				"navigationBarShadow":{
					"colorType": "green"
				}
			}
		}
	],
	"tabBar": {
	    "color": "#7A7E83",
	    "selectedColor": "#3cc51f",
	    "borderStyle": "black",
	    "backgroundColor": "#ffffff",
	    "list": [{
	        "pagePath": "pages/index/index",
	        "iconPath": "static/tabbar/home.png",
	        "selectedIconPath": "static/tabbar/home_active.png",
	        "text": "首页"
	    },
		{
		    "pagePath": "pages/clock/clock",
		    "iconPath": "static/tabbar/clock.png",
		    "selectedIconPath": "static/tabbar/clock_active.png",
		    "text": "打卡"
		},{
	        "pagePath": "pages/article/article",
	        "iconPath": "static/tabbar/article.png",
	        "selectedIconPath": "static/tabbar/article_active.png",
	        "text": "写作"
	    },
		{
		    "pagePath": "pages/mine/mine",
		    "iconPath": "static/tabbar/my.png",
		    "selectedIconPath": "static/tabbar/my_active.png",
		    "text": "我的"
		}]
	},
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	}
}
